{
    "name": "ts-scaffold",
    "version": "0.0.1",
    "description": "Just a starter TypeScript project",
    "main": "./dist/index.js",
    "scripts": {
        "build": "tsc --outDir ./dist",
        "test-coverage": "nyc npm run test-unit",
        "test-unit": "NODE_ENV=test mocha --opts mocha.opts ./tests"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "0.1.3",
        "@types/chai": "4.1.0",
        "@types/mocha": "2.2.44",
        "@types/node": "8.0.53",
        "chai": "4.1.0",
        "mocha": "4.0.1",
        "nyc": "14.1.1",
        "source-map-support": "0.5.12",
        "ts-node": "3.3.0",
        "typescript": "2.6.2"
    },
    "nyc": {
        "all": true,
        "extends": "@istanbuljs/nyc-config-typescript",
        "extensions": [
            ".ts"
        ],
        "exclude": [
            "index.ts",
            "coverage/**/*",
            "tests/**/*.spec.ts"
        ]
    },
    "keywords": [
        "math",
        "test"
    ],
    "author": "Kirk Lewis",
    "license": "MIT"
}
